
.text-comment::placeholder {
    font-family: inherit;
    font-weight: 400;
    font-size: 12px;
    line-height: 1.17;
    letter-spacing: 0.04em;
    color: rgb(46, 47, 66, 0.4);
    }
.text-field:focus,
.text-comment:focus {
   border: 1px solid #4D5AE5;
   outline: none;
}
.privacy-link {
    margin-left: 4px;
    text-decoration: underline;
    color: #4D5AE5;
}
.privacy-link:hover,
.privacy-link:focus {
    text-decoration: none;
}
.label-field {
    display: flex;
    margin-bottom: 4px;
    align-items: baseline;
   fill: #fff;
    transition: border 250ms cubic-bezier(0.4, 0, 0.2, 1);
}
.icon-vector {
    opacity: 0;
}
.icon-vector:checked {
    opacity: 1;
}
.input-checkbox:checked + .label-field .custom-checkbox {
    background-color: #404BBF;
    border-radius: 2px;
    fill: #F4F4FD;
    border: 1px solid #404BBF;
}
.custom-checkbox { 
    fill: none;
    margin-right: 8px;
   display: flex;
   justify-content: center;
   align-items: center;
    width: 16px;
    height: 16px;
    border-radius: 2px;
    border: 1px solid rgba(46, 47, 66, 0.4);
    transition: background-color 250ms cubic-bezier(0.4, 0, 0.2, 1),
    border 250ms cubic-bezier(0.4, 0, 0.2, 1),
    fill 250ms cubic-bezier(0.4, 0, 0.2, 1);
}
.button-send {
    display: flex;
    gap: 20px;
    justify-content: center;
}
.button-wrapper {
    cursor: pointer;
    box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.15);
    border-radius: 4px;
    padding: 16px 32px;
    width: 169px;
    height: 56px;
   background-color: #4D5AE5;
   color: #fff;
    transition: background-color 250ms cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    margin-top: 24px;
    
}
.button-wrapper:hover,
.button-wrapper:focus {
  background-color: #404BBF;
}